<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iV_Flag"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/temp_img"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tV_Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iV_Flag"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tV_population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tV_Country"
        android:layout_alignStart="@+id/tV_Country"
        android:layout_below="@+id/tV_Country"
        android:layout_gravity="center_horizontal"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tV_population"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Country:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewPopulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tV_Country"
        android:text="Population:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>